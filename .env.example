# Server Configuration
PORT=8080
LMS_SERVER_MODE=debug

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/lms_dev?sslmode=disable
LMS_DATABASE_HOST=localhost
LMS_DATABASE_PORT=5432
LMS_DATABASE_USER=lms_user
LMS_DATABASE_PASSWORD=lms_password
LMS_DATABASE_NAME=lms_dev
LMS_DATABASE_SSL_MODE=disable

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
LMS_REDIS_HOST=localhost
LMS_REDIS_PORT=6379
LMS_REDIS_PASSWORD=
LMS_REDIS_DB=0

# JWT Configuration
LMS_JWT_SECRET=your-very-secure-secret-key-here
LMS_JWT_REFRESH_SECRET=your-refresh-secret-key-here
LMS_JWT_EXPIRY_HOURS=24

# Email Configuration (for notifications)
LMS_EMAIL_SMTP_HOST=smtp.gmail.com
LMS_EMAIL_SMTP_PORT=587
LMS_EMAIL_USERNAME=your-email@gmail.com
LMS_EMAIL_PASSWORD=your-app-password

# File Upload Configuration
LMS_FILE_UPLOAD_PATH=./uploads
LMS_MAX_FILE_SIZE=5242880  # 5MB in bytes